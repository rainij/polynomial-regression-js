{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",  // "node" needed for some reason
    "declaration": true,
    "removeComments": false,

    "strict": true,

    /* Additional Checks */
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
  },
  "include": [
    "src/**/*"
  ]
}
